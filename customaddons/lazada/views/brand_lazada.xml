<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="brand_lazada_form_view" model="ir.ui.view">
            <field name="name">brand.lazada.form</field>
            <field name="model">brand.lazada</field>
            <field name="arch" type="xml">
                <header>
                     <button type="object" name="get_brand_by_page_lazada" string="Táº¡o brand"/>
                </header>
                <form string="ModelTitle">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="global_identifier"/>
                            </group>
                            <group>
                                <field name="name_en"/>
                                <field name="brand_id"/>

                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="brand_lazada_tree_view" model="ir.ui.view">
            <field name="name">brand.lazada.tree</field>
            <field name="model">brand.lazada</field>
            <field name="arch" type="xml">
                <tree string="ModelTitle">
                    <field name="name"/>
                    <field name="global_identifier"/>
                    <field name="name_en"/>
                    <field name="brand_id"/>
                </tree>
            </field>
        </record>



        <record id="brand_lazada_act_window" model="ir.actions.act_window">
            <field name="name">Brand lazada</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">brand.lazada</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Brand" id="brand_lazada_menu" parent="product_lazada_act" action="brand_lazada_act_window"/>

    </data>
</odoo>