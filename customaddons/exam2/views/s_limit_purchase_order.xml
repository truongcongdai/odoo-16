<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="limit_purchase_view_form" model="ir.ui.view">
            <field name="name">limit.purchase.view.form</field>
            <field name="model">limit.purchase</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="limit_purchase_ids">
                            <tree editable="bottom">
                                <field name="name"/>
                                <field name="order_limit"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

         <record id="limit_purchase_tree_view" model="ir.ui.view">
            <field name="name">exam2.limit_purchase.tree</field>
            <field name="model">limit.purchase</field>
            <field name="arch" type="xml">
                <tree string="Limit Purchase Order">
                    <field name="limit_purchase_ids"/>
                </tree>
            </field>
        </record>


        <record id="limit_purchase_act_window" model="ir.actions.act_window">
            <field name="name">Limit Purchase</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">limit.purchase</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Limit Purchase" id="limit_purchase_menu" parent="purchase.menu_purchase_root" action="limit_purchase_act_window"/>

    </data>
</odoo>