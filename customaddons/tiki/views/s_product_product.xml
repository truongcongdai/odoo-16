<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="s_product_product_form_inherit" model="ir.ui.view">
            <field name="name">s_product_product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='pricing']" position="after">
                    <group>
                        <field name="sku" string="Sku"/>
<!--                        <field name="image" widget="image" options="{'size': [150, 150]}"/>-->
                        <field name="is_inventory_type" invisible="1"/>
                        <field name="warehouse_product_id" widget="one2many" attrs="{'invisible': [('is_inventory_type', '=',True)]}">
                             <tree string="warehouses" editable="bottom">
                                 <field name="attribute_seller_id"/>
                                 <field name="qtyAvailable"/>
                             </tree>
                         </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>