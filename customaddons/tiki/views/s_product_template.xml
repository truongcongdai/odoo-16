<odoo>
    <data>
     <record model="ir.ui.view" id="product_template_view_form">
            <field name="name">product.template.view.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_open_label_layout']" position="after">
                    <button type="object" name="create_product_tiki" string="Tạo sản phẩm Tiki" />
                </xpath>
                 <xpath expr="//notebook//page[@name='sales']" position="attributes">
                     <attribute name="invisible">1</attribute>
                 </xpath>
                 <xpath expr="//notebook//page[@name='purchase']" position="attributes">
                     <attribute name="invisible">1</attribute>
                 </xpath>
                 <xpath expr="//notebook//page[@name='inventory']" position="attributes">
                     <attribute name="invisible">1</attribute>
                 </xpath>
                <xpath expr="//group[@name='group_standard_price']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//group[@name='group_general']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
<!--                <xpath expr="//page[@name='variants']" position="attributes">-->
<!--                    <attribute name="attrs">{'invisible': [('is_option', '=', False)]}</attribute>-->
<!--                </xpath>-->
                 <xpath expr="//group[@name='group_general']" position="after">

                     <group name="group_information">
                         <field name ="state"/>
                         <field name ="reason" attrs="{'invisible':[('is_reason', '=',False)]}"/>
                         <field name="product_category_id"/>
                         <field name="brand_id"/>
                         <field name="origin"/>
                         <field name="bulky"/>
                         <field name="brand_country"/>
                         <field name="warehouse_product_id" widget="one2many" attrs="{'invisible': ['|',('inventory_type', '!=','dropship'),('is_inventory_type','=',True)]}">
                             <tree string="warehouses" editable="bottom">
                                 <field name="attribute_seller_id"/>
                                 <field name="qtyAvailable"/>
                             </tree>
                         </field>
                     </group>
                     <group>
                         <field name="list_price" attrs="{'invisible':[('is_option', '=',True)]}"/>
                         <field name="sku" attrs="{'invisible':[('is_option', '=',True)]}"/>
                         <field name="product_weight_kg"/>
                         <field name="product_length"/>
                         <field name="product_width"/>
                         <field name="product_height"/>
                         <field name="inventory_type"/>
                         <field name="is_warranty_applied"/>
                         <field name="is_option" invisible="1"/>
                         <field name="is_reason" invisible="1"/>
                         <field name="is_inventory_type" invisible="1"/>
                     </group>
                 </xpath>

                <xpath expr="//notebook//page[@name='general_information']" position="after">
                    <page name="description" string="Mô tả sản phẩm">
                        <field name="description" widget="html"/>
                    </page>

                    <page name="certificate_files" string="Tài liệu yêu cầu">
                        <group>
                            <field name="ulr_image"/>
                            <field name="type_certificate"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <!--         actions -->
        <record model="ir.actions.act_window" id="product_tiki_act_window">
            <field name="name">Sản phẩm</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
        <!--         menu -->
        <menuitem id="menu_product_tiki" name="Tiki Shop" />
        <menuitem name="Sản phẩm" id="product_tiki_act" parent="menu_product_tiki"/>
        <menuitem name="Sản phẩm" id="product_tiki" parent="product_tiki_act" action="product_tiki_act_window"/>
    </data>
</odoo>
